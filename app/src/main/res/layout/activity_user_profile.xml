<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/bpBlue"
            android:weightSum="3">

            <TextView
                android:id="@+id/notif"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="notif"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvtopbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Chats"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/chatbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="new chat btn"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgprofile"
            android:text="Name" />

        <TextView
            android:id="@+id/tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgprofile"
            android:layout_toRightOf="@+id/tv1"
            android:text=" Ram LAl" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:text="Distance" />

        <TextView
            android:id="@+id/tvdist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:layout_toRightOf="@+id/tv2"
            android:text=" " />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:text="Name" />

        <TextView
            android:id="@+id/tvage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:layout_toRightOf="@+id/tv1"
            android:text=" 20yrs" />

        <Button
            android:id="@+id/imgvideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvage"
            android:text="V"
            android:visibility="gone" />

        <Button
            android:id="@+id/imgcall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvage"
            android:layout_toRightOf="@+id/imgvideo"
            android:text="C"
            android:visibility="gone" />

        <Button
            android:id="@+id/imgchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvage"
            android:layout_toRightOf="@+id/imgcall"
            android:text="Ch"
            android:visibility="gone" />

        <Button
            android:id="@+id/imgemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvage"
            android:layout_toRightOf="@+id/imgchat"
            android:text="Em"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imgprofile"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/topbar"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/tvname"
            android:src="@drawable/whatsapplogo" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvinterests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgchat" />

        <TextView
            android:id="@+id/tvintrsts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rvinterests"
            android:layout_toRightOf="@+id/tv1"
            android:text=" Interests " />

    </RelativeLayout>
</ScrollView>
