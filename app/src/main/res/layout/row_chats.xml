<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/grey_300"
    android:layout_margin="6dp"
    android:elevation="6dp"
    android:id="@+id/message_container"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/otherSender">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sender"
                android:id="@+id/otherSender_Sender"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timestamp"
                android:id="@+id/otherSender_TimeStamp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/meSender"
            android:layout_toRightOf="@+id/otherSender">

            <TextView
                android:id="@+id/meSender_Sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sender" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timestamp"
                android:id="@+id/meSender_TimeStamp"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/black" />

    <Button
        android:visibility="gone"
        android:id="@+id/btndown"
        android:text="Download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/commentString"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=""
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/status"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/ic_pending" />

</LinearLayout>
