<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/white"
    android:id="@+id/message_container">

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/icon_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_circle"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/icon_profile"
        android:layout_toRightOf="@+id/icon_profile"/>

    <TextView
        android:layout_marginLeft="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hey there! I am using Toado."
        android:textColor="#757575"
        android:layout_below="@+id/author"
        android:layout_alignStart="@+id/author" />

    <ImageView
        android:visibility="gone"
        android:src="@mipmap/ic_sent"
        android:id="@+id/selectedmsg"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/bg_circle_unread"
        android:gravity="center"
        android:layout_alignBottom="@+id/icon_profile"
        android:layout_alignEnd="@+id/icon_profile" />

    <TextView
        android:id="@+id/viewselected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#65B6DBE0"
        android:visibility="gone" />

</RelativeLayout>
